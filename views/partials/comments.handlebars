<div class="comments">
    {{!-- use this because in single-post we used partials object name to be post.comments--}}
    {{#each this}}
        <section class="comment">
            <div class="meta">
                {{user.username}} on {{format_date created_at}}
            </div>
            <div class="text">
                {{comment_text}}
            </div>
        </section>
  {{/each}}
</div>